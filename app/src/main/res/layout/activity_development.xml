<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/developmentpage"
    tools:context=".development">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"
        android:fontFamily="@font/acme"
        android:textColor="@color/purple_200"
        android:text="Development Courses"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/webdevelopment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/webdev"
            android:layout_marginTop="12dp"
            android:contentDescription="webdevelopment" />

        <ImageView
            android:id="@+id/appdevelopment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/appdev"
            android:layout_marginTop="12dp"
            android:contentDescription="appdevelopment" />
        <ImageView
            android:id="@+id/gamedevelopment"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/gamedev"
            android:layout_marginTop="12dp"
            android:contentDescription="gamedevelopment" />


    </LinearLayout>

</LinearLayout>